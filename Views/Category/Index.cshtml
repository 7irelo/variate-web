@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<h1>Categories</h1>
<div class="categories-container">
    @foreach(var obj in Model)
    {
        <div class="category-card">
            <img src="@obj.ImageUrl" class="category-card-image" alt="@obj.Name">
            <h2 class="category-card-title">@obj.Name</h2>
            <p class="category-card-description">@obj.Description</p>
            <a asp-action="Product" asp-route-categoryId="@obj.Id">
                <button class="category-button">View Products</button>
            </a>
            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"></a>
        </div>
    }
</div>
