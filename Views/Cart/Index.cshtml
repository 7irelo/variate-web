@model IEnumerable<OrderItem>
@{
    ViewData["Title"] = "Your Cart";
}

<h1>Your Cart</h1>
<div class="cart-container">
    @if(Model.Any())
    {
        foreach(var item in Model)
        {
            <div class="cart-item">
                <img src="@item.Product.ImageUrl" class="cart-item-image" alt="@item.Product.Name">
                <div class="cart-item-details">
                    <h2 class="cart-item-title">@item.Product.Name</h2>
                    <p class="cart-item-price">@item.Product.Price.ToString("C")</p>
                    <p class="cart-item-quantity">Quantity: @item.Quantity</p>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.Product.Id" class="cart-item-remove">Remove</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>Your cart is empty.</p>
    }
</div>
<a asp-action="Index" asp-controller="Product" class="cart-back-button">Continue Shopping</a>
